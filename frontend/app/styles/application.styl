@import 'nib'

* { box-sizing: border-box; }

html, body, button, input
    color #666
    font-family "Helvetica Neue", Helvetica, Arial, "Lucida Grande", sans-serif
    font-weight 300

body
    background #edf0f1
    padding 3%

h1, h2, h3, h4
    font-weight 100

h1
    font-size 60px
    margin 0 0 3%
    line-height 1

a, a:hover, a:visited, a:active, a:link
    text-decoration none
    outline none

@import '_helpers'
@import '_stat-item'
